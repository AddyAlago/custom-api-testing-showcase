{
  "$schema": "https://json-schema.org/draft/2020-12/schema",
  "title": "Order",
  "type": "object",
  "required": [
    "id",
    "user_id",
    "items",
    "total"
  ],
  "properties": {
    "id": {
      "type": "integer",
      "minimum": 1
    },
    "user_id": {
      "type": "integer",
      "minimum": 1
    },
    "items": {
      "type": "array",
      "items": {
        "type": "object",
        "required": [
          "sku",
          "qty"
        ],
        "properties": {
          "sku": {
            "type": "string"
          },
          "qty": {
            "type": "integer",
            "minimum": 1
          }
        },
        "additionalProperties": false
      },
      "minItems": 1
    },
    "total": {
      "type": "number",
      "minimum": 0
    }
  },
  "additionalProperties": false
}